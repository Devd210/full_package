<launch>
  <arg name="debug" default="false"/>
  <arg name="respawn" default="false"/>
  <arg name="re_params" default="$(find recovery_executive)/config"/>

  <env name="ROSCONSOLE_CONFIG_FILE" value="$(find recovery_executive)/custom_config.conf" if="$(arg debug)"/>
  
  <node name="recovery_executive" type="recovery_action_node" pkg="recovery_executive" output="screen" respawn="$(arg respawn)">
    <rosparam command="load" file="$(arg re_params)/recovery_action_server_params.yaml"/>
    <rosparam command="load" file="$(arg re_params)/stepback_and_steerturn_params.yaml"/>
    <rosparam command="load" file="$(arg re_params)/rotate_params.yaml"/>
    <rosparam command="load" file="$(arg re_params)/back_up_params.yaml"/>
  </node>
</launch>
