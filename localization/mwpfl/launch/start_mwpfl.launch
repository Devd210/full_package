<launch>  
    
    <arg name="sim" default="true" /> 
   <!--  <arg name="scan_topic" default="/base_scan"/> -->
    <!-- <arg name="scan_topic" default="/scan"/> -->
    <arg name="scan_topic" default="/slamware_ros_sdk_server_node/scan"/>
    <arg name="laser_frame" default="laser" />
    <arg name="map_name" default="imap_sdp_2" />
    <arg name="robot_init_x" value="0"/>
    <arg name="robot_init_y" value="0"/>
    <arg name="robot_init_phi" value="0"/>
     
    <param name="use_sim_time" value="$(arg sim)"/>
     <!-- static transform between laser and the robot-->
    <node pkg="tf" type="static_transform_publisher" name="base_2_laser" args="0 0 0 0 0 0 base_link $(arg laser_frame) 100" />

    <!-- transform between odom frame to base link -->
    <node pkg="utils" type="msg_to_tf" name="msg_to_tf">
        <param name="odometry_topic" value="/slamware_ros_sdk_server_node/odom"/>
        <!-- <param name="child_frame_id" value="base_link"/> -->
    </node>
     <!-- MAP SERVER -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find mw_mapping)/maps/$(arg map_name).yaml" output="screen">
    </node>

    <!-- AMCL -->
    <node pkg="mwpfl" type="mwpfl" name="mwpfl" output="screen">
        <remap from="scan" to="$(arg scan_topic)" />
        <remap from="initialpose" to="initialpose" />

        <param name="initial_pose_x" value="$(arg robot_init_x)"/>
        <param name="initial_pose_y" value="$(arg robot_init_y)"/>
        <param name="initial_pose_yaw" value="$(arg robot_init_phi)"/>

        <param name="odom_frame_id" value="odom"/>
        <param name="base_frame_id" value="base_link"/>
        <param name="global_frame_id" value="map"/>

        <!-- min thresholds for updating the estimates-->
        <!-- negative value will make it update at laser scan frequency -->
        <!-- max distance to skip laser scans-->
        <param name="update_min_distance" value="-1"/>
        <!-- max angle diff to skip laser scans-->
        <param name="update_min_angle" value="-1"/>
    <!--         <rosparam command="load" file="$(env ROBOT_BRINGUP_PATH)/parameters/localization/amcl.yaml" />  -->        
    </node>

</launch>