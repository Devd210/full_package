<launch>

    <arg name="scan_topic" default="/scan" /> 
    <arg name="laser_frame" default="laser" />
    <arg name="debug" default="false" />
    <arg name="odom_frame" default="odom" />
    <arg name="base_frame" default="base_link" />
    <arg name="map_frame" default="map" />

    <node pkg="tf" type="static_transform_publisher" name="ROSbot2_laser" args="0 0 0 3.14 0 0 base_link laser 10" />

    <!-- actual rosbot sensor-->
    <include file="$(find rosbot_ekf)/launch/all.launch"/>
    <include file="$(find rplidar_ros)/launch/rplidar.launch"/>

    <include file="$(find mw_run)/launch/start_mw_mapping.launch">
        <arg name="scan_topic" value="/scan" /> 
        <arg name="laser_frame" value="laser" />
        <arg name="odom_frame" value="odom" />
        <arg name="base_frame" value="base_link" />
        <arg name="map_frame" value="map" />
    </include>

    <!-- nav server -->
    <include file="$(find executive)/launch/demo_nav_server.launch">
        <arg name="gp_debug" value="$(arg debug)"/>
        <arg name="ctrl_debug" value="$(arg debug)"/>
        <arg name="respawn" value="false"/>
        <arg name="max_retrials" value="0"/>
        <arg name="local_costmap_timeout" value="10"/>
        <arg name="state_machine_timeout" value="15"/>
    </include>

    <include file="$(find map_exploration)/launch/explore.launch">
        <arg name="debug" value="$(arg debug)"/>
    </include>

</launch>
